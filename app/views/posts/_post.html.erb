<div id="<%= dom_id post %>" class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 cursor-pointer">
<div class="flex items-center mb-4">
<span class="text-sm font-semibold text-gray-600">
<%= post.user.email %>
</span>
</div>

<h2 class="text-xl font-bold text-gray-800 mb-2">
<%= link_to post.title, post, class: "hover:underline" %>
</h2>

<div class="text-gray-600 text-sm mb-4">
<p class="line-clamp-3">
<%= post.body %>
</p>
</div>

<div class="flex items-center justify-between text-sm text-gray-500">
<span><%= time_ago_in_words(post.created_at) %> ago</span>
<%= link_to 'Read More', post, class: 'text-blue-500 hover:underline' %>
</div>
</div>
