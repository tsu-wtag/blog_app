<div class="container mx-auto p-4 md:p-8">
  <div class="max-w-xl mx-auto bg-white rounded-xl shadow-md overflow-hidden p-8 text-center">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Your Profile</h1>

    <div class="bg-gray-50 px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 rounded-lg text-left mb-6">
      <dt class="text-sm font-medium text-gray-500">Email address</dt>
      <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @user.email %></dd>
    </div>

    <%= link_to 'Change password', edit_user_registration_path, class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
  </div>
</div>
